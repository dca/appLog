extends layout

block content
  .div(ng-app="dlog")
    .row(ng-controller="LoggerCtrl")

      .col-md-3
        .col-md-2(style="position: fixed;")
          input.form-control(type="number", ng-model="size", ng-change="logReloadAll()")
          ul.nav.nav-pills.nav-stacked.dlog-sidebar

            //- service select
            li.sidebar-head
              a="Service"
            li(ng-repeat="(label, val) in showService")
              a(href="#")
                input(type="checkbox", id="service-{{ label }}", ng-model="showService[label]", value="{{ val }}", ng-change="logReloadAll()")
                label(for="service-{{ label }}")
                  span
                  =" {{ label }}"

            li.sidebar-head
              a="Level"

            li(ng-repeat="(label, val) in showLevel")
              a(href="#")
                input(type="checkbox", id="level-{{ label }}", ng-model="showLevel[label]", value="{{ val }}", ng-change="logReloadAll()")
                label(for="level-{{ label }}")
                  span
                  =" {{ label }}"


      .col-md-9
        h1
          ="Meepshop"
          small="Logger - 共 {{ total }} 筆 {{showService['meepshop-admin']}} {{size}}"

      .col-md-3
      .col-md-9#logs-table
        table.table
          thead
            tr
              th='#'
              th='Service'
              th='Level'
              th='Time'
              th='Message'
              th='Stack'
          tbody
            tr(ng-repeat="log in logs | orderBy:predicate:reverse", class="{{ log.rowColorClass }}")
              td=""
              td="{{ log.service }}"
              td="{{ log.level }}"
              td="{{ log.time | date:'yyyy-MM-dd HH:mm:ss' }}"
              td="{{ log.message }}"
              td
                i.fa.fa-code(popover-placement="auto", popover="{{ log.stackStr }}", popover-trigger="mouseenter", popover-title="The title." )

        div &nbsp;
        div &nbsp;
        div &nbsp;


